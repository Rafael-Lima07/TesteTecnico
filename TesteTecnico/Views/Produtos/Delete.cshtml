@model TesteTecnico.Models.Produto

@{
    ViewData["Title"] = "Deletar o Produto";
}

<h1>Deletar o Produto</h1>

<h3>Tem certeza que deseja excluir o produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodBarras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodBarras)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PesoBruto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PesoBruto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PeloLiquido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PeloLiquido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
