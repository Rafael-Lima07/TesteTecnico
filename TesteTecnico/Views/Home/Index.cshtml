                <a asp-action="Index" asp-controller="Clientes">Lista de Clientes</a>
            </div>
        </div>
    </div>

    <div class="col col-6">
        <div class="card" style="width: 20rem; border: none;">
            <h2 class="card-title">Produtos</h2>
            <img src="https://neilpatel.com/wp-content/uploads/2019/07/mini-caixas-de-produtos-em-cima-de-laptop.jpeg" />
