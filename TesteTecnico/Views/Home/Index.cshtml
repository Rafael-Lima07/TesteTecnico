@{
    ViewData["Title"] = "Inicio";
}

<div class="row">
    <div class="col col-6">
        <div class="card" style="width: 25rem; border: none;">
            <h2 class="card-title">Clientes</h2>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkaXi8ba_aAI1rMf2Ql7zX9wn4qP4cW1DGOMcB3oz8WQ&s" />
